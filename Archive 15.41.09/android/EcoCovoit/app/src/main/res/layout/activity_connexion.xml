<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".activities.ConnexionActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_margin="60dp"
                app:srcCompat="@drawable/logo_pact_21" />

            <TextView
                android:id="@+id/txtv_connexionactivity_adresseEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adresse email:"
                android:layout_margin="@dimen/margin_editactivityjourney"/>/>

            <EditText
                android:id="@+id/edittxt_connexionactivity_adresseemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email"
                tools:layout_editor_absoluteY="390dp"
                android:layout_margin="@dimen/margin_editactivityjourney"/>/>

            <TextView
                android:id="@+id/txtv_connexionactivity_motDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mot de passe:"
                android:layout_margin="@dimen/margin_editactivityjourney"/>/>

            <EditText
                android:id="@+id/edittxt_connexionactivity_motDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_editactivityjourney"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Mot de passe"/>

            <Button
                android:id="@+id/btn_connexionactivity_connexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:layout_margin="55dp"/>

            <Button
                android:id="@+id/btn_connexionactivity_createAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pas de compte? Inscrivez vous"
                android:layout_margin="5dp"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>